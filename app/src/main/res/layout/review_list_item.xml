<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/review_username"
        tools:text ="Notendanafn"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="100dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/review_grading"
        tools:text ="5"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/review_star"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/review_star"
        android:layout_width="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="20dp"
        android:tint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_star_black_24dp"
        />


    <TextView
        android:id="@+id/review_list_text"
        app:layout_constraintTop_toBottomOf="@id/review_username"
        tools:text ="Þetta er geggjaður staður"
        android:textSize="10sp"
        android:paddingEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>